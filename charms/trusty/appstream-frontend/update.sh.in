#!/bin/sh

set -e

BASE_DIR=${HOME}

LOG_BASE_DIR=${BASE_DIR}/logs

# Start logging
logdir="${LOG_BASE_DIR}/`date "+%Y/%m"`"
mkdir -p ${logdir}
NOW=`date "+%d"`
LOGFILE="${logdir}/${NOW}.log"
exec >> "${LOGFILE}" 2>&1

rsync -avzP --delete --delete-after @RSYNC_HOST@::www /srv/appstream-new
rsync -avzP --delete --delete-after @RSYNC_HOST@::logs /srv/logs
rsync -avzP --delete --delete-after /srv/appstream-new /srv/appstream

# finish logging
exec > /dev/null 2>&1
